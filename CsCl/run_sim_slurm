#!/bin/bash

#runs=('84-119','84-150') 
#runs=('119','150')
pdbf=('4M0_ed' '6M90_ed')
noise=('poisson' 'None')
name=('test_Pnoise' 'test_noisefree')
npatterns=5

nalloc=`squeue -u cldah | wc -l`
if [ $nalloc -lt 2 ]; then
    salloc -p fast
fi
for conc in "${pdbf[@]}"; do
	#for ns in "${noise[@]}"; do
	for (( i=0; i<=1; i++)); do
	    echo "Running Simulations of $conc with ${noise[i]}-noise..."
	    #echo ${noise[i]}
	    #echo ${pdbf[i]}
	    srun /davinci/Cellar/Python/miniconda3/envs/py2/bin/python test_CsCl_84-X_v6.py -dn "${noise[i]}" -f "${name[i]}" -n "$npatterns" -pdb "$conc"
	done
done

